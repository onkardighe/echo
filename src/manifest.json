{
  "manifest_version": 3,
  "name": "Echo",
  "version": "1.0.0",
  "description": "Join secure, password-protected audio rooms with real-time audio",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Launch Echo"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.onrender.com/*"
  ]
}
